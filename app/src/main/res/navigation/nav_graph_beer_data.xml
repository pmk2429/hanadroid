<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_beer_data"
    app:startDestination="@id/beerListFragment">

    <fragment
        android:id="@+id/beerListFragment"
        android:name="com.example.hanadroid.ui.fragments.BeerListFragment"
        android:label="@string/beer_list_fragment_label"
        tools:layout="@layout/fragment_beer_data_list">

        <action
            android:id="@+id/action_beerList_to_beerDetails"
            app:destination="@id/beerDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/beerDetailsFragment"
        android:name="com.example.hanadroid.ui.fragments.BeerDetailsFragment"
        android:label="@string/universities_detail_fragment_label"
        tools:layout="@layout/fragment_beer_details" />
</navigation>
